!include shard-syntax.def

TYPE:
    IDENTIFIER

VARIABLE_DECLARATION:
    'var' TYPE IDENTIFIER ';'
    'var' TYPE IDENTIFIER '=' EXPRESSION ';'

CONSTANT_DECLARATION:
    'const' TYPE IDENTIFIER '=' EXPRESSION ';'

FUNCTION_DECLARATION:
    'func' TYPE IDENTIFIER '(' ')' COMPOUND_STATEMENT
    'func' TYPE IDENTIFIER '(' PARAMETER_LIST ')' COMPOUND_STATEMENT

PARAMETER_LIST:
    PARAMETER
    PARAMETER_LIST PARAMETER

PARAMETER:
    TYPE IDENTIFIER
    TYPE IDENTIFIER '=' EXPRESSION

# Extend declarations
+DECLARATION:
    VARIABLE_DECLARATION
    CONSTANT_DECLARATION
    FUNCTION_DECLARATION
